<%- include('../../partials/header.ejs')  %>

<body class="background-color">

    <%- include('../../partials/navbarhome.ejs')  %>

    <div class="container mb-5">
        <div class="row">
            <div class="col-12">
                <% result.articles.rows.forEach(article => { %>
                            
                    <div class="card mt-3">
                        <div class="card-header">
                            <h2><%= article.title %></h2>
                        </div>
                        <div class="card-body">

                            <div class="row">
                                <div class="col-xl-4 col-sm-12 col-md-12">
                                    
                                    <% if(article.image != null){ %>

                                        <a href="/<%= article.slug %>"><img src="/tmp/<%=article.image %>" class="img-thumbnail img-fluid" alt="<%= article.slug %>">

                                    <% }else{ %>

                                        <a href="/<%= article.slug %>"><img src="/images/article.jpg" class="img-thumbnail img-fluid" alt="<%= article.slug %>">     
                                    <% }%>
                                    
                                    </div></a>

                                <a href="/<%= article.slug %>" class="col-xl-8 link-dark col-sm-12 col-md-12">
                                    <%= article.resume %>
                                </a>
                            </div>
                        
                        </div>
                    </div>
                    <hr>
                <% });%>
            </div>
        </div>

        <div class="row">
            <div class="col-12 mb-5">

                <% if(result.page > 2) {%>

                    <a class="btn btn-dark" style="float: left;" href="/articles/page/<%= result.page - 1 %>">← Página <%= result.page - 1 %></a>

                <% }else if(result.page == 2){ %>
        
                    <a class="btn btn-dark" style="float: left;" href="/">← Página 2</a>
                <% } %>

                <% if(result.next) {%>

                    <a class="btn btn-dark" style="float: right;" href="/articles/page/<%= result.page + 1 %>">Página <%= result.page + 1 %> →</a>
                <% } %>
            </div>
        </div>

    </div>

    <%- include('../../partials/footer.ejs')  %>
    <%#JS PADRÃO %>
    <script src="/js/app.js"></script>
</body>
